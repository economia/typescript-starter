{
	"compilerOptions": {
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,

		"declaration":true,
		"declarationMap": true,

		"sourceMap":true,

		"outDir": "dist",
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/*.spec.ts", "**/*.spec.tsx"]
}